pen.goto 100, 250
pen.direction -90

$len = 1
$delay = 20

20.times do
    pen.delay $delay

    if $len % 2 == 0 do
        pen.color 255, 255, 255
    else
        pen.color 255, 0, 0
    end

    72.times do
        pen.line $len
        pen.turn 5
    end

    $len = $len + 1
    $delay = $delay - 1
end
