pen.goto 320, 240

$red = 255
$green = 255
$blue = 255

pen.color $red, $green, $blue

$len = 10
20.times do 
    pen.line $len
    pen.turn 60

    $red = $red - 10
    $green = $green - 10
    $blue = $blue - 10

    pen.color $red, $green, $blue

    $len = $len + 10
end

pen.color 255, 0, 0
pen.goto 110, 40
pen.direction 0

4.times do
    pen.line 420
    pen.turn 90
end

scope.dumpall
pen.update
